/* Canon colors */
:root {
  --red: #b40000;
  --blue: #001534;
  --cream: #faf5ec;
  --text: #111;
}

/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: var(--cream);
  color: var(--text);
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  line-height: 1.5;
}

/* Ticker */
.ticker {
  background: var(--red);
  color: #fff;
  font-size: 0.85rem;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
  padding: 0.4rem 0;
}

.ticker p {
  display: inline-block;
  animation: ticker 30s linear infinite;
}

@keyframes ticker {
  0% { transform: translateX(100%); }
  100% { transform: translateX(-100%); }
}

/* Banner */
.site-banner {
  background: var(--blue);
  width: 100%;
  overflow: hidden;
}

.banner-img {
  display: block;
  width: 100%;
  height: auto;
  max-width: none;
  object-fit: contain;
}

/* Content */
main {
  padding: 3rem 1rem;
  text-align: center;
}

footer {
  text-align: center;
  font-size: 0.8rem;
  color: #333;
  margin-bottom: 2rem;
}
